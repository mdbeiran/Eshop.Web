@using Eshop.Business.StaticTools
@model Eshop.DomainClass.Product.Product

<div class="col-sm-3">
    <div class="product-image-wrapper">
        <div class="single-products">
            <div class="productinfo text-center">
                <a href="@Url.RouteUrl("ProductDetail",new{id =Model.ProductId})">
                    <img src="@PathTools.ProductImagePath@Model.SingleProductImageName" alt="">
                </a>
                <p>@Model.Title</p>
            </div>
        </div>
    </div>
</div>
