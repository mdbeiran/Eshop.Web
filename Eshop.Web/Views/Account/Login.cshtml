@model Eshop.ViewModel.User.LoginViewModel
@{
    ViewBag.Title = "ورود";
}

<div class="container">
    <section id="form">
        <div class="row">
            <div class="col-sm-6">
                <div class="signup-form">
                    <h2> ورود کاربـر </h2>
                    @using (Html.BeginRouteForm("LoginPost", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "تلفن همراه شما" } })
                                <span>@Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })</span>
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "کلمه عبور" } })
                                <span>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</span>
                            </div>
                            <button type="submit" class="btn btn-default" id="submitBottom">ورود</button>
                        </div>
                        <div class="clearfix"></div>
                        <br />

                        <div class="col-md-6">
                            <a href="/ResetPassword" class="btn btn-default btn-block">بازیابی کلمه عبور</a>
                        </div>
                        <div class="col-md-6">
                            <a href="/Register" class="btn btn-default btn-block">ثبت نام</a>
                        </div>
                        
                    }
                </div>
            </div>
        </div>
    </section>
</div>

@section CustomScripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        $(function () {
            if ($("#UserName").val() === null) {
                $("#submitBottom").attr("disabled", true);
            }
        });
    </script>
}

