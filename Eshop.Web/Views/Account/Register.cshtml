@model Eshop.ViewModel.User.RegisterViewModel
@{
    ViewBag.Title = "ثبت نام";
}

<div class="container">
        <section id="form">
            <!--form-->
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <h2>
                        با ثبت نام خود ما را در روند ارائه بهتر خدمات یاری کنید
                    </h2>
                    <p>
                        پس از ثبت نام ، آدرس خود را در قسمت پنل کاربری وارد نمایید تا پس از درج سفارش ، کالا به آدر مورد نظر ارسال شود
                    </p>
                </div>
                <div class="col-sm-6">
                    <div class="signup-form">
                        <!--sign up form-->
                        <h2>ثبت نام کاربـر جدیـد</h2>
                        @using (Html.BeginRouteForm("RegisterPost", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "نام کاربری شما" } })
                                <span>@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })</span>
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "تلفن همراه" } })
                                <span>@Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })</span>
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "کلمه عبور" } })
                                <span>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</span>
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "تکرار کلمه عبور" } })
                                <span>@Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })</span>
                            </div>
                            <button type="submit" class="btn btn-default" id="submitBottom">ثبت نام</button>
                        }
                    </div><!--/sign up form-->
                </div>
            </div>
        </section>
</div>

@section CustomScripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        $(function () {
            if ($("#UserName").val() === null) {
                $("#submitBottom").attr("disabled", true);
            }
        });
    </script>
}

