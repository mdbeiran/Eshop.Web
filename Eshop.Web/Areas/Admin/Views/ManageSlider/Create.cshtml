@using Eshop.Business.StaticTools
@model Eshop.DomainClass.Public.Slider

@{
    ViewBag.Title = "افزودن اسلایدر";
}

<!-- Page Breadcrumb -->
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="#">خانه</a>
        </li>
        <li class="active">مدیریت اسلایدر ها</li>
        <li class="active">افزودن اسلایدر</li>
    </ul>
</div>
<!-- /Page Breadcrumb -->
<!-- Page Header -->
<div class="page-header position-relative">
    <div class="header-title">
        <h1>
            افزودن اسلایدر
        </h1>
    </div>
    <!--Header Buttons-->
    <div class="header-buttons">
        <a class="sidebar-toggler" href="#">
            <i class="fa fa-arrows-h"></i>
        </a>
        <a class="refresh" id="refresh-toggler" href="">
            <i class="glyphicon glyphicon-refresh"></i>
        </a>
        <a class="fullscreen" id="fullscreen-toggler" href="#">
            <i class="glyphicon glyphicon-fullscreen"></i>
        </a>
    </div>
    <!--Header Buttons End-->
</div>
<!-- /Page Header -->
<!-- Page Body -->
<div class="page-body">
    <div class="row">
        <div class="col-md-12">

            @using (Html.BeginForm("Create", "ManageSlider", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-8">
                            <div class="widget flat radius-bordered">
                                <div class="widget-header bg-green">
                                    <span class="widget-caption">فرم افزودن اسلایدر</span>
                                </div>
                                <div class="widget-body">
                                    <div>
                                        
                                        <div class="form-group col-md-6">
                                            <span class="input-icon icon-right">
                                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", PlaceHolder = Html.DisplayNameFor(m => m.Title) } })
                                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                                <i class="fa fa-group circular"></i>
                                            </span>
                                        </div>
                                        
                                        
                                        <div class="form-group col-md-6">
                                            <span class="input-icon icon-right">
                                                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control", PlaceHolder = Html.DisplayNameFor(m => m.Url) } })
                                                @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                                                <i class="fa fa-group circular"></i>
                                            </span>
                                        </div>
                                        
                                        <div class="form-group col-md-12">
                                            <label>
                                                @Html.LabelFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                                            </label>
                                            <span class="input-icon icon-right cke_rtl">
                                                @Html.TextAreaFor(model => model.Text)
                                            </span>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" class="colored-success" value="True" name="@nameof(Model.IsActive)">
                                                    <span class="text">فعال / غیر فعال</span>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="clearfix"></div>
                                        <hr />
                                        <div class="col-md-3">
                                            <button type="submit" class="btn btn-block btn-success">افزودن</button>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                    </div>
                    <div class="col-md-4">
                        <div class="clearfix"></div>
                        <div class="widget flat radius-bordered">
                            <div class="widget-header bg-green">
                                <span class="widget-caption">تصویر اسلایدر</span>
                            </div>
                            <div class="widget-body">
                                <div id="registration-form">
                                    <div class="form-group col-md-12">
                                        <img id="SliderImage" src="@PathTools.NoPhoto" alt="your image" class="Input-picture"/>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="form-group col-md-12">
                                        <span class="file-input btn btn-azure btn-file btn-block">
                                            تصویر <input type="file" id="sliderImageInput" name="sliderImage">
                                        </span>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            }
        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script src="~/Scripts/jquery.js"></script>
    <script>
        $(function () {
            CKEDITOR.replace('Text', {
                customConfig: '/Content/js/config.js'
            });
        });
    </script>
}
