@using Eshop.Business.Users
@model IEnumerable<Eshop.ViewModel.Products.ProductFeatureViewModel>

<table class="table table-bordered col-md-12">
    <tr>
        <th>ویژگی</th>
        <th>مقدار</th>
        <th>دستورات</th>
    </tr>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    <input type="text" value="@item.Value" id="Feature_@item.PF_Id" class="form-control" />
                </td>
                <td>
                    <a class="btn btn-warning btn-xs" onclick="EditFeature('@item.PF_Id')">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    <a class="btn btn-danger btn-xs" onclick="DeleteFeatureForEdit('@UserManager.FixetTextForUrl(item.Value)',@item.Id,@item.PF_Id)">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </td>
            </tr>
        }
    }
</table>

