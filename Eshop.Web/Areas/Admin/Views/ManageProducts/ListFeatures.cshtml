@using Eshop.Business.Users
@model IEnumerable<Eshop.ViewModel.Products.ProductFeatureViewModel>

<table class="table table-bordered col-md-12">
    <tr>
        <th>ویژگی</th>
        <th>مقدار</th>
        <th>دستورات</th>
    </tr>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Value</td>
                <td>
                    <a class="btn btn-danger btn-xs" onclick="DeleteFeature('@item.Id', '@UserManager.FixetTextForUrl(item.Value)')">X</a>
                </td>
            </tr>
        }
    }
</table>
