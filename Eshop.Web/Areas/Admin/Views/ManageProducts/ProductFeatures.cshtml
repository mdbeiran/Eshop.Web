@model IEnumerable<Eshop.DomainClass.Product.ProductFeatures>
@{
    ViewBag.Title = "لیست ویژگی ها";
}


<!-- Page Breadcrumb -->
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="#">خانه</a>
        </li>
        <li>مدیریت محصولات</li>
        <li class="active">لیست ویژگی ها</li>
    </ul>
</div>
<!-- /Page Breadcrumb -->
<!-- Page Header -->
<div class="page-header position-relative">
    <div class="header-title">
        <h1>
            ویژگی ها
        </h1>
    </div>
    <!--Header Buttons-->
    <div class="header-buttons">
        <a class="sidebar-toggler" href="#">
            <i class="fa fa-arrows-h"></i>
        </a>
        <a class="refresh" id="refresh-toggler" href="">
            <i class="glyphicon glyphicon-refresh"></i>
        </a>
        <a class="fullscreen" id="fullscreen-toggler" href="#">
            <i class="glyphicon glyphicon-fullscreen"></i>
        </a>
    </div>
    <!--Header Buttons End-->
</div>
<!-- /Page Header -->
<!-- Page Body -->
<div class="page-body">
    <div class="form-group">
        <a href="@Url.Action("CreateFeature","ManageProducts")" class="btn btn-success btn-block text-bold col-md-3">
            افزودن ویژگی جدید
        </a>
    </div>
    <div class="clearfix"></div>
    <br/>
    <div class="well with-header with-footer">
        <div class="header bordered-green">
            ویژگی ها
        </div>
        <div class="clearfix"></div>
        <br>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="text-center">
                            <i class="fa fa-lg fa-comment"></i> عنوان
                        </th>
                        <th class="text-center">
                            <i class="fa fa-lg fa-cogs"></i> دستورات
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @item.FeatureTitle
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("EditFeature","ManageProducts",new {id=item.FeatureId})" class="btn btn-warning btn-circle btn-xs" title="ویرایش"><i class="glyphicon glyphicon-edit"></i></a>
                                @if (item.IsDelete)
                                {
                                    <a class="btn btn-success btn-circle btn-xs" data-remodal-target="modal" onclick="returnProductFeature(@item.FeatureId)" title="برگرداندن"><i class="glyphicon glyphicon-repeat"></i></a>
                                }
                                else
                                {
                                    <a class="btn btn-danger btn-circle btn-xs" data-remodal-target="modal" onclick="DeleteProductFeature(@item.FeatureId)" title="حذف"><i class="glyphicon glyphicon-trash"></i></a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

<div class="remodal" data-remodal-id="modal">
    <button data-remodal-action="close" class="remodal-close"></button>
    <h1>احتیاط</h1>
    <p>
        آیا عملیات مورد نظر اطمینان دارید؟
    </p>
    <br>
    <button data-remodal-action="confirm" class="remodal-confirm">بله</button>
    <button data-remodal-action="cancel" class="remodal-cancel">خیر</button>

</div>

