@model Eshop.DomainClass.Articles.ArticleComment
@{
    ViewBag.Title = "ویرایش نظر کاربر";
}


<!-- Page Breadcrumb -->
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="#">خانه</a>
        </li>
        <li>مدیریت مقالات</li>
        <li class="active">ویرایش نظر </li>
    </ul>
</div>
<!-- /Page Breadcrumb -->
<!-- Page Header -->
<div class="page-header position-relative">
    <div class="header-title">
        <h1>
            ویرایش نظر
        </h1>
    </div>
    <!--Header Buttons-->
    <div class="header-buttons">
        <a class="sidebar-toggler" href="#">
            <i class="fa fa-arrows-h"></i>
        </a>
        <a class="refresh" id="refresh-toggler" href="">
            <i class="glyphicon glyphicon-refresh"></i>
        </a>
        <a class="fullscreen" id="fullscreen-toggler" href="#">
            <i class="glyphicon glyphicon-fullscreen"></i>
        </a>
    </div>
    <!--Header Buttons End-->
</div>
<!-- /Page Header -->
<!-- Page Body -->

<div class="page-body">

    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            @using (Html.BeginForm("EditComment", "ManageArticles", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.CommantID)
                @Html.HiddenFor(model => model.ArticleID)
                @Html.HiddenFor(model => model.CreateDate)
                @Html.HiddenFor(model => model.UserID)
                @Html.HiddenFor(model => model.IsDelete)
                @Html.HiddenFor(model => model.IsRead)
                @Html.HiddenFor(model => model.ParentID)
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-xs-12">
                        <div class="widget flat radius-bordered">
                            <div class="widget-header bg-yellow">
                                <span class="widget-caption">ویرایش نظر کاربر</span>
                            </div>
                            <div class="widget-body">
                                <div id="registration-form col-md-12">
                                    <div class="form-group col-md-12">
                                        <label>
                                            @Html.LabelFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                                        </label>
                                        @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control animated", PlaceHolder = Html.DisplayNameFor(m => m.Comment) } })
                                        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-md-12">
                                        <button type="submit" class="btn btn-warning col-md-3">ویرایش</button>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/Areas/Admin/Content/CustomJs/ResizeTextArea.js"></script>
}