@model Eshop.ViewModel.User.ChangePasswordViewModel
@{
    ViewBag.Title = "تغییر کلمه عبور";
}
<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 padding-right" style="overflow-x:auto;">
                <h2 class="title text-center">اطلاعات شخصی</h2>
                <div class="login-form">
                    <!--login form-->
                    <h2>ویرایش اطلاعات :</h2>
                    @using (Html.BeginRouteForm("ChangePasswordPost", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>کلمه عبور قبلی</label>
                            @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "کلمه عبور قبلی" } })
                            <span>@Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })</span>
                        </div>
                        <div class="form-group">
                            <label>کلمه عبور جدید</label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "کلمه عبور" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>تکرار کلمه عبور</label>
                            @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "تکرار کلمه عبور" } })
                            @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-default">ویرایش</button>
                    }
                </div>
            </div>
            @Html.Action("UserSidebar")
        </div>
    </div>
</section>

@section CustomScripts
{
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}